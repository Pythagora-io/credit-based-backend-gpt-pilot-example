<%- include('partials/header', {title: 'Forgot Password'}) %>
<div class="row">
  <%- include('partials/sidebar') %>
  <div class="col-md-9">
    <h1>Forgot Password</h1>
    <p>Please enter your email address to request a password reset link.</p>
    <form action="/api/auth/requestPasswordReset" method="post">
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <button type="submit" class="btn btn-primary">Request Reset Link</button>
    </form>
  </div>
</div>
<%- include('partials/footer') %>
